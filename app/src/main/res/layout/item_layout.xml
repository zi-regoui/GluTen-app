<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

        <LinearLayout
            android:id="@+id/layoutDateHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/datePrint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="date"
                    android:textSize="13dp"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:id="@+id/hourPrint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hour"
                    android:textSize="13dp"
                    android:layout_marginRight="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/layoutDateHour"
            android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="100dp">

                        <TextView
                            android:id="@+id/tableHeader1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:text="Systolique"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/SYSPrint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:text="value sys" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/tableHeader2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:text="Diastolique"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/DIAPrint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:text="value dia"/>

                </LinearLayout>

        </LinearLayout>

</RelativeLayout>